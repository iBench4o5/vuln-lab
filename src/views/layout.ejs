<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <title>Vuln Lab</title>
  <link rel="stylesheet" href="/public/style.css"/>
</head>
<body>
  <header>
    <nav>
      <a href="/">Home</a>
      <a href="/login">Login</a>
      <% if (user) { %>
        <a href="/dashboard">Dashboard</a>
        <a href="/profile">Profile</a>
      <% } %>
      <a href="/attacker">Attacker</a>
      <a href="/admin">Admin</a>
    </nav>
    <div class="toggles">
      <span>SQLi: <strong><%= toggles.sqliVulnerable ? 'VULNERABLE' : 'SAFE' %></strong></span>
      <span>CSRF: <strong><%= toggles.csrfVulnerable ? 'VULNERABLE' : 'SAFE' %></strong></span>
    </div>
  </header>
  <main>
    <%- body %>
  </main>
  <footer>
    <form action="/logout" method="POST">
      <% if (user) { %><button>Logout (<%= user.username %>)</button><% } %>
    </form>
  </footer>
</body>
</html>
